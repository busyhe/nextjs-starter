{
  "git": {
    "commitMessage": "chore: release v${version}",
    "tagName": "v${version}",
    "requireBranch": ["main", "release"],
    "requireCleanWorkingDir": false
  },
  "github": {
    "release": true,
    "releaseName": "Release v${version}",
    "autoGenerate": true
  },
  "npm": {
    "publish": false
  },
  "plugins": {
    "@release-it/bumper": {
      "in": "package.json",
      "out": ["package.json", "packages/*/package.json", "apps/*/package.json"]
    }
  }
} 