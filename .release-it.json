{
  "git": {
    "commitMessage": "chore: release v${version}",
    "tagName": "v${version}",
    "requireBranch": ["main", "release"],
    "requireCleanWorkingDir": false
  },
  "github": {
    "release": true,
    "releaseName": "Release v${version}",
    "autoGenerate": true
  },
  "npm": {
    "publish": false
  },
  "plugins": {
    "@release-it/bumper": {
      "in": [
        {
          "file": "package.json",
          "path": "version"
        },
        {
          "file": "apps/web/package.json",
          "path": "version"
        },
        {
          "file": "packages/ui/package.json",
          "path": "version"
        },
        {
          "file": "packages/typescript-config/package.json",
          "path": "version"
        },
        {
          "file": "packages/eslint-config/package.json",
          "path": "version"
        }
      ],
      "out": [
        {
          "file": "package.json",
          "path": "version"
        },
        {
          "file": "apps/web/package.json",
          "path": "version"
        },
        {
          "file": "packages/ui/package.json",
          "path": "version"
        },
        {
          "file": "packages/typescript-config/package.json",
          "path": "version"
        },
        {
          "file": "packages/eslint-config/package.json",
          "path": "version"
        }
      ]
    }
  }
} 